#
# bspwm hotkeys
#

super + shift + Escape
	bspc quit

#close / kill
super + {_,shift + }w
	bspc node -{c,k}

#switch layouts
super + g
	bspc desktop -l next

#set window state
super + {t,shift + t,s,f}
	bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

#set node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

#change window focus
super + {_, shift +} {j,k,i,l}
    bspc node -{f,s} {west,south,north,east}

#change window focus relative to current node in tree
super + {p,b,comma,period}
    bspc node -f @{parent, brother,first,second}

#change desktop left/right
super + bracket{left,right}
	bspc desktop -f {prev,next}

#focus on specific desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'



#set manual mode for next window focus left/down/up/right
super + ctrl + {j,k,i,l}
    bspc node -p {west,south,north,east}

#expand window in direction
super + ctrl + alt + {j,k,i,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#contract window in direction
super + ctrl + shift + {j,k,i,l}
    bspc node -z {right -20 0,top 0 20, bottom 0 -20,left 20 0}

#move floating window
super + alt + {j,k,i,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#
# mouse stuff
#
~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u


#
# wm independant hotkeys
#

super + Return
	uxterm
 
super + space
	dmenu_run

super + Escape
	pkill -USR1 -x sxhkd

super + {_, shift +} semicolon
    {firefox, google-chrome-stable}

#Volume adjustment
{F8,F9,F10}
    /home/rndmprsn/Documents/pa-vol.sh {mute,minus,plus}

#Brightness adjustment
alt + {F9,F10}
    xbacklight -{dec,inc} 5

#XF86PowerOff
#    echo "Powering Off"
